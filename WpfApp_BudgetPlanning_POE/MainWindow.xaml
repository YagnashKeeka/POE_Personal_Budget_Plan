        <Label Content="&#x9;Welcome&#xD;&#xA;Personal Budget Application" HorizontalAlignment="Left" VerticalAlignment="Top" Height="150" Width="423" FontSize="30" FontWeight="Bold" Margin="171,0,0,0"/>
        <Label Content="Created by:&#xD;&#xA;Yagnash Keeka &#xD;&#xA;(20108984)" Margin="10,347,666,0" VerticalAlignment="Top" Height="62" FontWeight="Bold" Background="{x:Null}" FontSize="14">
